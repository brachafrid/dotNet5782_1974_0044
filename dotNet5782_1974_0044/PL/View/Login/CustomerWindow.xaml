<UserControl x:Class="PL.CustomerWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!--<UserControl.Resources>
        <ResourceDictionary Source="../Dictionary.xaml" />
    </UserControl.Resources>-->
    <UserControl.DataContext>
        <local:CustomerWindowVM/>
    </UserControl.DataContext>
    <Grid>
        <DockPanel>
            <StackPanel>
                <TextBlock Text="Welcome " Height="30"/>
                <TextBlock Text="{Binding customer.Name}" Height="30"/>
                <Button Content="display my parcels" Command="{Binding DisplayParcelsCommand}" />
                <Button Content="send a parcel" Command="{Binding sendParcel}"/>
                <Button Content="collection a parcel" Command="{Binding collectionParcel}"/>
                <Button Content="getting a parcel" Command="{Binding gettingParcel}" Height="33"/>
            </StackPanel>
            <StackPanel Visibility="{Binding VisibilityCustomer.visibility}">
                    <TextBlock Text="My Parcels: " Height="30"/>
                <ListView x:Name="listParcelsFrom" ItemsSource="{Binding Path=customer.FromCustomer}"/>
                <ListView x:Name="listParcelsTo" ItemsSource="{Binding Path=customer.ToCustomer}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
