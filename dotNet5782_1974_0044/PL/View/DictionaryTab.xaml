<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PL"
                    xmlns:po="clr-namespace:PL.PO">
    <local:TabItemContentConverter x:Key="TabItemContentConverter" />
    <DataTemplate DataType="{x:Type po:TabItemFormat}">
        <StackPanel Height="auto" Width="auto">
            <TabItem>
                <TabItem.Header>
                    <TextBlock  Text="{Binding Path=Text}"  />
                </TabItem.Header>
                <ContentControl Content="{Binding Path=TabContent,Converter={StaticResource TabItemContentConverter}}"/>
            </TabItem>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>